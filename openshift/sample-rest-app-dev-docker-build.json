{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "sample-rest-app-dev-docker-build"
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Application Name",
      "discription": "Name of the REST Sample application. Note that changing this name without changing the name of the dir on the git repo will lend to errors.",
      "value": "sample-rest-app",
      "required": true
    }
  ],
  "objects": [
    {
      "apiVersion": "build.openshift.io/v1",
      "kind": "BuildConfig",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}-docker"
      },
      "spec": {
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "source": {
          "dockerfile": "FROM registry.access.redhat.com/redhat-openjdk-18/openjdk18-openshift\nCOPY app.jar /deployments/app.jar",
          "type": "Dockerfile"
        },
        "strategy": {
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "openjdk18-openshift:latest",
              "namespace" : "openshift"
            }
          },
          "type": "Docker"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "imageChange": {},
            "type": "ImageChange"
          }
        ]
      }
    }
  ]
}
